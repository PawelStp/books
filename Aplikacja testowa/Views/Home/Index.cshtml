<div class="row" ng-app="booksApp" ng-controller="bookCtrl">
    <div class="col-md-12">
        <table style="width:100%">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Created</th>
            </tr>
            <tr ng-repeat="book in books">
                <td>{{book.Id}}</td>
                <td>{{book.Title}}</td>
                <td>{{book.Created}}</td>
            </tr>
        </table>

        <label>Tytuł</label>
        <input ng-model="newBook.Title" />

        <label>Category</label>
        <input ng-model="newBook.Category" />

        <button ng-click="addNewBook(newBook)">Add</button>
    </div>
</div>
